<h1>New Post</h1>
<div class="row">
  <div class="col-md-12">
    <%= form_for @post do |f| %>
      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@post.errors.count, "error") %>.</h4>
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field post-frm">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
    </div>

    <div class="field post-frm">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter post body" %>
    </div>

    <div class="field">
      <%= f.submit "Save", class: "btn btn-success post-btn btn-lg pull-right" %>
    </div>
    <% end %>

  </div>
</div>
