<h4>Add a comment</h4>
<%= form_for [post,comment] do |f| %>
  <div class="field comment-frm">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter comment title" %>
  </div>

  <div class="field comment-frm">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Enter comment body" %>
  </div>

  <div class="field">
    <%= f.submit "Save", class: "btn btn-success comment-btn btn-lg pull-right" %>
  </div>
<% end %>
